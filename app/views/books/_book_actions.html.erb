<div style="display: flex;" >
  <% if current_user.admin? %>
    <%= link_to "View/Edit", locals[:book], class: "btn btn-primary btn-sm" %>
    <%= button_to "Destroy", locals[:book], method: :delete, class: "btn btn-danger btn-sm" %>
  <% elsif current_user.student? %>
    <%= button_to 'Borrow this book', {controller: "borrow_books", action: "create"}, params: {book_id: locals[:book].id, borrow_book: {id: nil}},  method: :post, remote: true %>
  <% else %>
    <p> No Actions Available </p>
  <% end %>
</div>