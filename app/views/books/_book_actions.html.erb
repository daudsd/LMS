<div style="display: flex;" >
  <% if current_user.admin? %>
    <%= link_to "View/Edit", locals[:book], class: "btn btn-primary btn-sm" %>
    <%= button_to "Destroy", locals[:book], method: :delete, class: "btn btn-danger btn-sm" %>
  <% elsif current_user.student? %>
    <p> Borrow this Books </p>
  <% else %>
    <p> No Actions Available </p>
  <% end %>
</div>